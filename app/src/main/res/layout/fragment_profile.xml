<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/appColor"
            android:paddingStart="18dp"
            android:paddingTop="2dp"
            android:paddingEnd="18dp"
            android:paddingBottom="8dp"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="@color/white"
            android:text="Profile"/>

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/profile"
            android:layout_marginTop="20dp"
            android:clipToOutline="true"
            android:layout_marginBottom="16dp"
            android:background="@drawable/profile_circle_bg"
            android:padding="10dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Welcome"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/userLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="India"
            android:textSize="16sp"
            android:textColor="#888888"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/btnFavorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Bookmarked Centers"
            android:background="#B9FAF3"
            android:drawableStart="@drawable/baseline_bookmarks_24"
            android:padding="12dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About NashaMukti Hub"
            android:background="#B9FAF3"
            android:drawableStart="@drawable/baseline_house_24"
            android:padding="12dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnHelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Help / Helpline"
            android:background="#B9FAF3"
            android:drawableStart="@drawable/baseline_call_24"
            android:padding="12dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exit App"
            android:padding="12dp"
            android:backgroundTint="#D32F2F"
            android:textColor="#FFFFFF"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="40dp" />

    </LinearLayout>
</ScrollView>
