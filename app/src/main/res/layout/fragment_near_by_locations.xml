<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:orientation="vertical"
    tools:context=".NearByLocations">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appColor"
        android:orientation="horizontal"
        android:paddingStart="18dp"
        android:paddingTop="2dp"
        android:paddingEnd="18dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/nearbyHeading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="Nearby Rehab Centers"
            android:textColor="#EBF0F4"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/searchLocation"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="5dp"
            android:src="@drawable/baseline_search_24" />
    </LinearLayout>

    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edittext_border"
        android:baselineAligned="false"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:outlineAmbientShadowColor="@color/black"
        android:drawableStart="@drawable/baseline_search_24_black"
        android:drawablePadding="5dp"
        android:hint="Search Locations"
        android:paddingStart="10dp"
        android:inputType="text"
        android:textColor="#000"
        android:textSize="16sp" />

    <ListView
        android:id="@+id/nearbyListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F4F8F7"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:padding="8dp"
        android:paddingBottom="4dp"
        android:scrollbars="none" />
</LinearLayout>
